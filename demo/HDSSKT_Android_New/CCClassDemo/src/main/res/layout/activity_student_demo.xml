<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/strut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true" />
    <!--老师流-->
    <RelativeLayout
        android:id="@+id/rl_stream_t"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/strut"
        android:layout_alignParentTop="true"
        android:background="#e5e5e5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订阅流展示区域"
            android:textColor="#000000"
            android:textSize="@dimen/item_tip_size" />
    </RelativeLayout>
    <!--老师流-->
    <RelativeLayout
        android:id="@+id/rl_stream_s"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/strut"
        android:layout_alignParentBottom="true"
        android:background="#ffffd0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="推流流展示区域"
            android:textColor="#000000"
            android:textSize="@dimen/item_tip_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="50dp">

        <TextView
            android:id="@+id/tv_00"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="0、退出"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="1、连麦"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_02"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="2、下麦"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_03"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="3、文档"
            android:textColor="#000000" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_class_tip"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="直播未开始！"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />
</RelativeLayout>
