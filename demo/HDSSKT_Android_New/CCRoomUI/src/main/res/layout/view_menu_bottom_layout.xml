<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_bottom_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/common_operator_area"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/menu_bottom_chat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="7dp"
            android:background="@drawable/student_chat_selector" />

        <Button
            android:id="@+id/menu_bottom_handup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="7dp"
            android:background="@drawable/student_handup_selector"
            android:visibility="gone"/>

        <Button
            android:id="@+id/menu_bottom_lianmai"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/student_queue_mai_selector"
            android:textColor="@color/white"
            android:visibility="visible"/>

    </LinearLayout>

    <Button
        android:id="@+id/menu_bottom_setting"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/setting_selector"
        android:visibility="visible"/>

</RelativeLayout>