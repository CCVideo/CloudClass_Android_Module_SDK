<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="TeacherBottomItemLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TeacherBottomBtnStyle">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="ItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:background">@drawable/item_selected</item>
        <item name="tipColor">@color/colorItemTip</item>
        <item name="tipSize">@dimen/item_tip_size</item>
        <item name="valueColor">@color/colorItemValue</item>
        <item name="valueSize">@dimen/item_value_size</item>
        <item name="topLineColor">@color/colorItemLine</item>
        <item name="bottomLineColor">@color/colorItemLine</item>
        <item name="lineMode">BOTH</item>
        <item name="tipMarginStart">@dimen/item_margin_start</item>
        <item name="valueMarginEnd">6dp</item>
        <item name="rightMarginEnd">@dimen/item_margin_end</item>
        <item name="rightVisbility">VISIBLE</item>
        <item name="rightSrc">@mipmap/forward_arrow</item>
    </style>
    <style name="ItemSimpleBgStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:background">@color/colorItemNormal</item>
    </style>

    <style name="ItemSimpleTipStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">@dimen/item_margin_start</item>
        <item name="android:textSize">@dimen/item_tip_size</item>
        <item name="android:textColor">@color/colorItemTip</item>
    </style>
    <style name="ItemSimpleIconStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">@dimen/item_margin_end</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
