<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_doc_item_swipe"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingEnd="25dp">

        <TextView
            android:id="@+id/id_city_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/item_margin_start"
            android:textColor="#000000"
            android:textSize="@dimen/item_tip_size" />

        <TextView
            android:id="@+id/id_city_item_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/id_city_choose_icon"
            android:textColor="#000000"
            android:textSize="@dimen/item_tip_size"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/id_city_choose_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/choose_icon" />

    </RelativeLayout>
</RelativeLayout>